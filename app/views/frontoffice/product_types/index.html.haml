- model_class = ProductType
%h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @product_types.each do |product_type|
      %tr
        %td= link_to product_type.name, frontoffice_product_type_path(product_type)
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_frontoffice_product_type_path(product_type), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), frontoffice_product_type_path(product_type), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_frontoffice_product_type_path, :class => 'btn btn-primary'
