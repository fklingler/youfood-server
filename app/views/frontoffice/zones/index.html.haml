- model_class = Zone
%h1!=t '.title', :default => model_class.model_name.human.pluralize + ' of ' + link_to(@restaurant.name, frontoffice_restaurant_path(@restaurant))
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @zones.each do |zone|
      %tr
        %td= link_to zone.name, frontoffice_restaurant_zone_path(zone.restaurant, zone)
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_frontoffice_restaurant_zone_path(zone.restaurant, zone), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), frontoffice_restaurant_zone_path(zone.restaurant, zone), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_frontoffice_restaurant_zone_path, :class => 'btn btn-primary'
