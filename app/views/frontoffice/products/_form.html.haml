= simple_form_for [:frontoffice, @product], :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :price
  = f.input :product_type, :collection => ProductType.all, :selected => (@product.product_type.id if @product.product_type) unless ProductType.empty?
  = f.button :wrapped, :cancel => frontoffice_products_path
