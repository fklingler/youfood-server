- model_class = @product.class
%h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @product.name
%p
  %strong= model_class.human_attribute_name(:price) + ':'
  %br
  = @product.price
%p
  %strong= model_class.human_attribute_name(:product_type) + ':'
  %br
  = link_to @product.product_type.name, frontoffice_product_type_path(@product.product_type) if @product.product_type

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), frontoffice_products_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_frontoffice_product_path(@product), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), frontoffice_product_path(@product), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
