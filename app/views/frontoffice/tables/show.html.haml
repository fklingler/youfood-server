- model_class = @table.class
%h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:number) + ':'
  %br
  = @table.number
%p
  %strong= model_class.human_attribute_name(:zone) + ':'
  %br
  = link_to @table.zone.name, frontoffice_restaurant_zone_path(@table.restaurant, @table.zone) if @table.zone
%p
  %strong= model_class.human_attribute_name(:api_token) + ':'
  %br
  = @table.device.authentication_token if @table.device

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), frontoffice_restaurant_tables_path(@table.restaurant), :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_frontoffice_restaurant_table_path(@table.restaurant, @table), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), frontoffice_restaurant_table_path(@table.restaurant, @table), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
