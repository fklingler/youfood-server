- model_class = Employee
%h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:username)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @employees.each do |employee|
      %tr
        %td= employee.username
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_frontoffice_employee_path(employee), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), frontoffice_employee_path(employee), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_frontoffice_employee_path, :class => 'btn btn-primary'
